<script type="text/javascript">
	function Person(name, phone, addr) {
		this.name = name
		this.phone = phone
		this.addr = addr
	}

	Person.prototype.info = function() {
		let msg = ''
		for ( let key in this) {
			msg += key + ' : ' + this[key] + '\n'
		}
		alert(msg)
	}

	let person = new Person('홍길동', '010-1111-2222', '광명시 철산동')
	person.info()

	let person2 = new Person('홍길순', '010-2222-3333', '서울시 서초구')
	person2.info()
	
	console.log(person)
	console.log(person2)
	
	Person.prototype.info = function(){
		alert('change...')
	}
	
	let person3 = new Person('고길동', '010-5555-6666', '경기도 용인시')
	
	person3.info()
	
</script>

