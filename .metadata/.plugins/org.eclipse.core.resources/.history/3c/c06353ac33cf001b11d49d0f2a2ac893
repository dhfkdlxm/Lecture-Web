<script type="text/javascript">
	$(document).ready(function() {
		//Text변환이라는  button을 누르면  p태그의 내용을 수정

		$('#btn01').click(function() {
			/*
			let pTags = document.getElementsByTagName("p")
				for (let i = 0; i < pTags.length; i++) {
					pTags[i].innerText = '문장이 변환 되었습니다!'				
				}
			 */
			alert($('p').text())
			$('p').text('<mark>문장이 변환되었습니다.</mark>')//text()는 <mark>도 문자로 인식
		})

		$('#btn02').click(function() {
			$('p').html('<mark>문장이 변환되었습니다.</mark>')
		})

		$('#btn03').click(function() {
			//document.querySeletor('a').setAttribute('href', 'http://www.naver.com')	
			//document.querySeletor('a').href = "http://www.naver.com"

			// 	$('a').attr('href', 'http://www.naver.com')
			//	$('a').attr('target', '_blank') 
		})
		$('#btn04').click(function() {
			/* 			let pTags = document.getElementsByTagName("p")
			
			 for(let i in pTags){
			 pTags[i].innerHTML = '<strong>'+i + ' :  문장변환</strong>'
			 } */

			$('p').html(function(index, html) {
				return ' <strong> ' + index + ' : 문장변환</strong>'
			})

			$('p').text(function(index, text) {
				return ' <strong> ' + index + ' : 문장변환</strong>'
			})
		})

	})
</script>
