<script type="text/javascript">
	function Person(name, phone, addr) {
		this.name = name
		this.phone = phone
		this.addr = addr
	}

	Person.prototype.hobby = '영화감상'
	Person.prototype.info = function() {
		let msg = ''
		for ( let key in this) {
			if (key != 'info')
				msg += key + ' : ' + this[key] + '\n'
		}
		alert(msg)
	}
	
	
	let p = new Person('홍길동', '010-4225-3870', ' 경기도광명시')
</script>
