<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	window.onload = function() {
		//document = 화면 전체를 의미함
		//document에서 id로 어떤것을 찾고 싶어함!  document.getElementById(id값!)
		//let id = document.getElementById('id')
		alert("잠시 멈춰가는길")
		let id = document.querySelector('#id') //선택자를 통해서 추출하는방법
		id.innerHTML = '아이디'

		let password = document.querySelector('.pwd') //복수개가 나오더라도 제일 처음으로 나온 값만 선택이됨!
		password.innerHTML = '패스워드'
		let password2 = document.querySelectorAll('.pwd') //복수개를 받는 함수, 배열의 형태로 나타남
	}
</script>
</head>
<body>
	<!-- ID와 클래스를 사용하여 접근, id = unique, class 다양항거 -->
	<table style="width: 100; height: 100;" border="1">
		<tr>
			<td id="id">ID</td>
		</tr>
		<tr>
			<td class="pwd">PASSWORD</td>
		</tr>
		<tr>
			<td class="pwd">PASSWORD2</td>
		</tr>
	</table>

</body>
</html>