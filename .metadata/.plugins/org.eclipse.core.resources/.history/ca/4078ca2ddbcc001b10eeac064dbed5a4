<script type="text/javascript">
	function Person(name, phone, addr) {
		this.name = name
		this.phone = phone
		this.addr = addr
	}

	Person.prototype.info = function() {
		let msg = ''
		for ( let key in this) {
			msg += key + ' : ' + this[key] + '\n'
		}
		alert(msg)
	}
	
	let person = new Person('홍길동', '010-1111-2222', '광명시 철산동')
</script>

