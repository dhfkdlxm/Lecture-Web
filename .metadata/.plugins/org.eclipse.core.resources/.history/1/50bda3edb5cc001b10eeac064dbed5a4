<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	function func(num1, num2, num3) {
		alert(` num1 : ${ num1 }, num2 : ${ num2 }, num3 : ${ num3 } `)
	}
	//기존!	
	//func() →  num 1, 2, 3 : undefined
	//func(100) →  num 2, 3 : undefined
	//func(100, 200) →  num 3 : undefined
	//func(100, 200, 300)

	//자바스크립트는 0이아닌 모든 정수를 true 로 인식
	//undefined = false로 인식
	function func(num1, num2, num3) {
		if (!num1)
			num1 = 0
		if (!num2)
			num2 = 0
		if (!num3)
			num3 = 0
		alert(` num1 : ${ num1 }, num2 : ${ num2 }, num3 : ${ num3 } `)
	}
	
	
	function func(num1, num2, num3) {
		num1 = num1 || 0
		num2 = num2 || 0
		num3 = num3 || 0
		alert(` num1 : ${ num1 }, num2 : ${ num2 }, num3 : ${ num3 } `)
	}
	func()
	func(100)
	func(100, 200)
	func(100, 200, 300)
	//undefined 처리!!
</script>


</head>
<body>

</body>
</html>