<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>
	window.onload = function() {
		let h1Tag = document.createElement('h1')
		//document.createElements() : tag를 만들어주는 역할
		let text = document.createTextNode('Hello')
		//document.createTextNode() : text를 입력해주는 역할

		h1Tag.appendChild(text) //h1Tag에 자식을 만들거다.  text를 h1으로 text를 감싸고 있으니까자식임)
		document.body.appendChild(h1Tag)

		let imgTag = document.createElement('img')
		//이미지 태그에 속성을 정의해줘야함
		imgTag
				.setAttribute('src',
						'https://t1.daumcdn.net/daumtop_chanel/op/20200723055344399.png')
		let aTag = document.createElement('a')

		//각 태그들은 객체 이니까. 멤버변수로 호출가능
		//aTag.setAttribute('href', 'http://daum.net') // .attr()
		aTag.href = 'http://daum.net'
		aTag.target = '_blank'
		console.log(aTag)
		aTag.appendChild(imgTag)
		document.body.appendChild(aTag)
	}
	
</script>
</head>
<body>
