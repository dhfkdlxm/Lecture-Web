<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">

//매개변수를 여러개 받고 싶을때, 하지만 매개변수가 얼마나 들어올지 모를때!
//1. arguments  사용하기
	function func01(){
		alert(arguments[0] + ' : ' + arguments[1] + ' : ' + arguments[2] )
	}
	
	
//2. (...numbers) 사용하기!
	function func02(...numbers){
		console.log(numbers)
		alert(numbers[0] + ' : ' + numbers[1] + ' : ' + numbers[2] )
/* 		for (var i = 0; i < numbers.length; i++) {
			alert(numbers[i] + " : ")
		} */
	}
	
	function func03(a, b, ...numbers){
		alert(`a : ${ a }, b : ${ b }, number : ${ numbers } `)
	}
	
	func01(1 , 2 , 3)
	func02(1,2,3)
	func02(1)
	func03(10,20, 30, 40, 50, 60)
	
	let array = [10, 20, 30]
	func01(array) // 결과 값 => 10,20,30 : undefined : undefined
	
	//func01(array[0], array[1], array[2])
	func01.apply(null, array) 
	// func01를 실행하고, array의 각각 값을 위 주석처럼 실행하라!
	// ECMAScript5
	func01(...array)//ECMAScript 6
	
	
	
	
</script>

</head>
<body>

</body>
</html>