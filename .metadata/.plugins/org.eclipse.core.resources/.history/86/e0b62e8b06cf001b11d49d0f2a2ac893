<script type="text/javascript">
	$(document).ready(function() {
		alert('!!!')
		//		$('tr').css('background-color', 'yellow')
		//		$('tr:even').css('background-color', 'yellow') // 짝수만!
		$('tr:odd').css('background-color', 'pink') // 홀수만!
		//짝수번째 애들에게 배경색을 주고싶다. : css에서 n-th child 로 진행
		//CSS 우선순위 순서 inline >> css !important
		// h1 #h01 .h01 h2.h01
		//css우선순위! id >> class >> tag		

		/*
		//마우스가 들어오면~ 핑크로
		$('h2').mouseenter(function() {
			$(this).css('background-color', 'pink')
		})
		//마우스가 떠나가면~ 햐양으로~!
		$('h2').mouseleave(function(){
			$(this).css('background-color', 'white')
		})
		 */
		//둘을 하나로~ $('태그').hover(mouseenter함수, mouseleave함수)
		$('h2').hover(function() {
			$(this).css('background-color','pink') //마우스가 들어갈때~
		}, function() {
			$(this).css('background-color','white')//마우스가 나갈때~
		})

	})
</script>
