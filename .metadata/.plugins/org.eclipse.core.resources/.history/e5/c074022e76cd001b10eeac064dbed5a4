	//은닉성! 변수 앞에 _를 씀!
	class Person{
		//Class 개념에서는 function대신 construtor를 사용함!
		constructor(name, phone, addr){
			this._name = name
			this._phone = phone
			this._addr = addr
		}
		
		info(){
			alert(`name : ${ this._name }\nphone : ${ this._phone }\naddr : ${ this._addr }`)
		}
		get name(){
			return this._name
		}
		
		
	}
	
	
	//new하는 경우만 prototype을 쓸수있음!
	p = new Person('홍길동', '010-4225-3870', ' 경기도광명시')
	p.info()
	console.log(p)
	p._name = '홍길순'
	console.log(p)
	
</script>

