<title>Insert title here</title>
<script type="text/javascript">
	let d = new Date()
	console.log(d)

	//오늘은 2021년 6월 15일 화요일 입니다.

	String.prototype.changeStr = function() {
		//자바 스크립트에는 CSS와 관련된 기능이 포함되어있음!
		return this.bold().fontcolor('red').fontsize('20pt').link(
				'http://www.naver.com')
	}

	Date.prototype.today = function() {
		let day = [ '월', '화', '수', '목', '금', '토', '일' ]
		console.log('오늘은 ' + this.getFullYear() + '년 ' + this.getMonth() + '월 '
				+ day[Number(this.getDate())] + '요일 입니다.')
	}
</script>
