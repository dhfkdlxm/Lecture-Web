<script type="text/javascript">
/*  
	자바스크립트 내장함수
	1. 타이머
		setTimeOut(function, ms) : ms가 지나면  매개변수의 function을 호출하라!
		setInterval(function , ms) : 일정  ms 마다! 매개변수의 function을 시행하라 !
		clearInterval(id) : 일정시간이 지나면 id의 interval를 그만해라!
		
		
	2. 
 
 */

setTimeout(function(){
	//alert('일어나!!!!!')
	clearInterval(pid)
}, 3000)

var pid = setInterval(function(){
	document.write(' 현재시간' +new Date() + '<br>')
}, 1000)





</script>
